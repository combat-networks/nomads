<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="us.ihmc.android.aci.dspro.MainActivity">

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDSProHost"
        android:id="@+id/btnConnect"
        android:layout_alignLeft="@+id/etDSProHost"
        android:layout_alignStart="@+id/etDSProHost"
        android:layout_toStartOf="@+id/txtConnection"
        android:layout_alignRight="@+id/etDSProHost"
        android:layout_alignEnd="@+id/etDSProHost" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="127.0.0.1"
        android:ems="10"
        android:id="@+id/etDSProHost"
        android:textAlignment="center"
        android:layout_marginTop="133dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtStatus"
        android:layout_alignLeft="@+id/btnConnect"
        android:layout_alignStart="@+id/btnConnect"
        android:layout_alignTop="@+id/txtConnection" />

    <TextView
        android:text="DSPro Host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDSProHost"
        android:layout_above="@+id/btnConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtConnection"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:text="@string/connection_not_connected"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/etDSProHost"
        android:layout_alignEnd="@+id/etDSProHost" />

    <Button
        android:text="Submit Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmitRoute"
        android:layout_below="@+id/btnConnect"
        android:layout_alignLeft="@+id/btnConnect"
        android:layout_alignStart="@+id/btnConnect"
        android:layout_alignRight="@+id/btnConnect"
        android:layout_alignEnd="@+id/btnConnect" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/btnSubmitRoute"
        android:id="@+id/etCallbacks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textAlignment="center" />

</RelativeLayout>
